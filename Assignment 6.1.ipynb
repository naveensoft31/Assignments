    "with open('file1.text','r') as f:\n",
    "    r=f.readlines()\n",
    "    s=r[0].strip(\"\\n\")\n",
    "    s1=s.split()\n",
    "    s2=list(s)\n",
    "    count=0\n",
    "    for i in s2:\n",
    "        if i.isalpha()==True:\n",
    "            count+=1\n",
    "    print(\"Lines:\",len(r))\n",
    "    print(\"Words:\",len(s1))\n",
    "    print(\"Characters:\",count)"
